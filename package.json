{
	"name": "animotion-docs",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm run generate:llms && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
